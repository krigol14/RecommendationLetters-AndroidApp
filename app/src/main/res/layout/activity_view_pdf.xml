<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ViewPdf">

    <RelativeLayout
        android:id="@+id/signpdf"
        android:layout_width="407dp"
        android:layout_height="491dp"
        android:background="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="420dp"
                android:text="Date: "
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="420dp"
                android:text="DATE"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/std"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="435dp"
                android:text="Student name: "
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="435dp"
                android:text="STUDENT NAME"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/prf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="450dp"
                android:text="Professor name: "
                android:textColor="@color/black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/professor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="450dp"
                android:text="PROFESSOR NAME"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </com.github.barteksc.pdfviewer.PDFView>
    </RelativeLayout>

    <Button
        android:id="@+id/grant"
        android:layout_width="212dp"
        android:layout_height="43dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#3C6E71"
        android:text="grant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/professorName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/dateEdit" />

    <EditText
        android:id="@+id/professorName"
        android:layout_width="105dp"
        android:layout_height="41dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="professorName"
        android:inputType="textPersonName"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/grant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signpdf"
        app:layout_constraintVertical_bias="0.863" />

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="date"
        android:inputType="date"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/grant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signpdf"
        app:layout_constraintVertical_bias="0.873" />

</androidx.constraintlayout.widget.ConstraintLayout>
