<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ViewPdf">

    <RelativeLayout
        android:id="@+id/signpdf"
        android:layout_width="407dp"
        android:layout_height="491dp"
        android:background="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Draw your signature and press GRANT in order to send the recommendation letter or just press GRANT if you don't want to sign the document"
        app:layout_constraintBottom_toTopOf="@+id/grant"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/grant"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#3C6E71"
        android:text="grant"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
