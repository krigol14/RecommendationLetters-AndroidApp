<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".ViewPdf">

    <RelativeLayout
        android:id="@+id/signpdf"
        android:layout_width="407dp"
        android:layout_height="491dp"
        android:background="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/abc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="420dp"
                android:text="DATE" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="440dp"
                android:text="STUDENT NAME" />

            <TextView
                android:id="@+id/professor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="460dp"
                android:text="PROFESSOR NAME" />
        </com.github.barteksc.pdfviewer.PDFView>
    </RelativeLayout>

    <!--    <TextView-->
    <!--        android:id="@+id/textView4"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginBottom="8dp"-->
    <!--        android:text="Draw your signature and press GRANT in order to send the recommendation letter or just press GRANT if you don't want to sign the document"-->
    <!--        app:layout_constraintBottom_toTopOf="@+id/grant"-->
    <!--        app:layout_constraintStart_toStartOf="parent" />-->

    <EditText
        android:id="@+id/dateEdit"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="date"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/grant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signpdf"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/professorName"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="professorName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/grant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signpdf"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/studentName"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="studentName"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/grant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signpdf"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/grant"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#3C6E71"
        android:text="grant"
        app:layout_constraintTop_toBottomOf="@+id/dateEdit"
        tools:layout_editor_absoluteX="-2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
